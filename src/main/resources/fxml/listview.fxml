<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox id="hbox" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.PlaylistController">
   <children>
      <VBox>
         <children>
            <Text fill="#cccccc" strokeType="OUTSIDE" strokeWidth="0.0" text="Playlists">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Text>
            <ListView fx:id="listViewPlaylist" onMouseClicked="#selectPlaylist" />
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="playlistNameField" prefWidth="105.0" promptText="Set playlist name" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
                  <Button mnemonicParsing="false" onAction="#createPlaylist" text="Create" />
                  <Button mnemonicParsing="false" onAction="#editPlaylist" text="Edit">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" onAction="#removePlaylist" text="Remove" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </VBox>
      <VBox>
         <children>
            <Text fill="#cccccc" strokeType="OUTSIDE" strokeWidth="0.0" text="Items">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Text>
            <ListView fx:id="listViewItem" onMouseClicked="#selectItem" prefWidth="500.0" />
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#addItem" text="Import" />
                  <Button mnemonicParsing="false" onAction="#removeItem" text="Remove" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
